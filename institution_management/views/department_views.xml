<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="department_form" model="ir.ui.view">
        <field name="name">department form</field>
        <field name="model">institution.department</field>
        <field name="arch" type="xml">
            <form string="Department Creation">
                <sheet>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="department_list_view" model="ir.ui.view">
        <field name="name">department list view</field>
        <field name="model">institution.department</field>
        <field name="arch" type="xml">
            <list string="department list">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="department_form_action" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">institution.department</field>
        <field name="view_mode">list,form</field>
    </record>




</odoo>