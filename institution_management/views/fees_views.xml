<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="fees_form" model="ir.ui.view">
        <field name="name">fees.form</field>
        <field name="model">institution.fees</field>
        <field name="arch" type="xml">
            <form string="Fees">
                <sheet>
                    <group>
                        <field name="amount" />
                        <field name="due_date" />
                        <field name="payment_date" />
                        <field name="student_id" />
                        <field name="payment_status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="fees_view_list" model="ir.ui.view">
        <field name="name">fees.list.view</field>
        <field name="model">institution.fees</field>
        <field name="arch" type="xml">
            <list>
                <field name="amount" />
                <field name="due_date" />
                <field name="payment_date" />
                <field name="student_id" />
                <field name="payment_status"/>
            </list>
        </field>
    </record>

    <record id="fees_action" model="ir.actions.act_window">
        <field name="name">fees</field>
        <field name="res_model">institution.fees</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>