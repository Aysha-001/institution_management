<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="batch_form" model="ir.ui.view">
        <field name="name">batch.form</field>
        <field name="model">institution.batch</field>
        <field name="arch" type="xml">
            <form string="Batch Form">
                <sheet>
                    <group>
                        <field name="name" string="Batch name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="course_id" placeholder="select a course"/>
                    </group>

                    <group>
                        <notebook string="Students List" name="Batch_students_tab">
                            <field name="student_id">
                                <list>
                                    <field name="admission_no"/>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                </list>
                            </field>
                        </notebook>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="batch_list_view" model="ir.ui.view">
        <field name="name">batch.view.list</field>
        <field name="model">institution.batch</field>
        <field name="arch" type="xml">

            <list>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="course_id"/>
            </list>
        </field>
    </record>

     <record id="action_batch" model="ir.actions.act_window">
        <field name="name">batches</field>
        <field name="res_model">institution.batch</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>