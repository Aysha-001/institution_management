<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="course_list_view" model="ir.ui.view">
        <field name="name">course.view.list</field>
        <field name="model">institution.course</field>
        <field name="arch" type="xml">

            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="duration"/>
            </list>
        </field>
    </record>



    <record id="course_form" model="ir.ui.view">
        <field name="name">course form</field>
        <field name="model">institution.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="duration"/>
                        <field name="descr"/>
                    </group>

                    <group>
                        <field name="assigned_teacher" widget="many2many_tags"/>
                        <field name="categories_id" widget="many2many_tags"/>
                    </group>

                    <group>
                        <notebook string="Students" name="student_tab">
                            <field name="student_ids">
                                <list>
                                     <field name="admission_no"/>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                </list>
                            </field>
                        </notebook>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">institution.course</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>





