<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="session_attendance_pivot" model="ir.ui.view">
        <field name="name">session.attendance.pivot.view</field>
        <field name="model">institution.session.attendance</field>
        <field name="arch" type="xml">
            <pivot string="Attendance summary">
                <field name="student_id" type="row"/>
                <field name="attendance_date" type="col" />
                <field name="present_int" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="session_attendance_action" model="ir.actions.act_window">
        <field name="name">Attendance summary</field>
        <field name="res_model">institution.session.attendance</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="session_attendance_pivot"/>
    </record>
</odoo>