<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="category_form" model="ir.ui.view">
        <field name="name">category form</field>
        <field name="model">institution.category</field>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <field name="name" />
                </sheet>
            </form>
        </field>
    </record>

    <record id="category_view_list" model="ir.ui.view">
        <field name="name">category list view</field>
        <field name="model">institution.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="category_action" model="ir.actions.act_window">
        <field name="name">categories</field>
        <field name="res_model">institution.category</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>