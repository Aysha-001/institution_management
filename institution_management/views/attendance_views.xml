<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
     <record id="attendance_form" model="ir.ui.view">
        <field name="name">attendance.form</field>
        <field name="model">institution.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <sheet>
                    <group>
                        <field name="date" />
                        <field name="batch_id" />
                    </group>
                    <field name="attendance_ids">
                        <list editable="bottom">
                            <field name="student_id"/>
                            <field name="present"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

      <record id="attendance_view_list" model="ir.ui.view">
        <field name="name">attendance_list_view</field>
        <field name="model">institution.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="date" />
                <field name="batch_id" />
            </list>
        </field>
    </record>

    <record id="attendance_action" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">institution.attendance</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>