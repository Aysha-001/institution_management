<odoo>
    <record id="student_view_rule" model="ir.rule">
        <field name="name">Teacher: Own students only</field>
        <field name="model_id" ref="model_institution_student"/>
        <field name="domain_force">[('course_id.assigned_teacher.user_id','in',user.id)]</field>
        <field name="groups" eval="[(4, ref('institution_management.group_teacher'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="student_self_rule" model="ir.rule">
        <field name="name">Student: Own data only</field>
        <field name="model_id" ref="model_institution_student"/>
        <field name="domain_force">[('user_id','=', user.id)]</field>
        <field name="groups" eval="[(4, ref('institution_management.group_student'))]"/>
         <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>